<BorderPane fx:id="pane" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <HBox BorderPane.alignment="CENTER_LEFT">
         <children>
            <Label fx:id="username" prefHeight="23.0" prefWidth="208.0">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <JFXButton fx:id="login" buttonType="RAISED" onAction="#Login" prefHeight="25.0" prefWidth="218.0" text="Нэвтрэх">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </JFXButton>
            <JFXButton buttonType="RAISED" onAction="#Exit" prefHeight="25.0" prefWidth="81.0" text="Гарах">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </JFXButton>
         </children>
      </HBox>
   </bottom>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="31.0" prefWidth="500.0">
               <children>
                  <TextField fx:id="search" promptText="Хайх">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <TableView fx:id="table" prefHeight="293.0" prefWidth="500.0">
              <columns>
                <TableColumn fx:id="colName" prefWidth="100.0" text="Нэр" />
                <TableColumn fx:id="colAuthor" prefWidth="94.0" text="Зураач" />
                  <TableColumn fx:id="colPrice" prefWidth="104.0" text="Үнэ" />
                  <TableColumn fx:id="colInfo" prefWidth="171.0" text="Тайлбар" />
                  <TableColumn fx:id="colLiked" prefWidth="26.0" text="&lt;3" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
